{
	"name": "cinema-db",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"test:watch": "vitest",
		"test:run": "vitest run",
		"coverage": "vitest run --coverage",
		"preview": "vite preview",
		"lint:eslint": "eslint \"src/**/*.{js,ts,tsx,jsx}\" --config .eslintrc.cjs",
		"lint:prettier": "prettier --check \"src/**/*.{js,ts,tsx,jsx}\"",
		"lint:prettier-fix": "yarn lint:prettier --write .",
		"lint:eslint-fix": "eslint --fix \"src/**/*.{js,ts,tsx,jsx}\" --config .eslintrc.cjs",
		"test:editorconfig": "editorconfig-checker --exclude \"/.git|.husky|node_modules/g\"",
		"lint:styles": "stylelint \"**/*.{scss,css}\"",
		"lint:styles-fix": "stylelint --fix \"**/*.{scss,css}\"",
		"prepare": "husky install",
		"lint-staged": "lint-staged"
	},
	"dependencies": {
		"@testing-library/react": "^14.0.0",
		"happy-dom": "^9.10.8",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"s3-deploy": "1.4.0",
		"vitest": "^0.31.0"
	},
	"devDependencies": {
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"@vitejs/plugin-react": "^4.0.0",
		"editorconfig-checker": "^5.0.1",
		"eslint": "^8.39.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.3.4",
		"husky": "^8.0.0",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"stylelint": "^15.6.1",
		"stylelint-config-standard-scss": "^9.0.0",
		"typescript": "^5.0.4",
		"vite": "^4.3.2"
	}
}
